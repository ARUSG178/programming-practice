{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar y ejecutar C++ (UCRT64)",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Ejecutar programa",
      "type": "shell",
      "command": "${fileBasenameNoExtension}.exe",
      "dependsOn": "Compilar y ejecutar C++ (UCRT64)",
      "group": "none"
    }
  ]
}